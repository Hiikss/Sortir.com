{% extends 'base.html.twig' %}

{% block body %}
    <h1>Supprimer le lieu "{{ place.name }}"</h1>

    {{ form_start(placeForm) }}
    {{ form_row(placeForm._token) }}
    <p>Êtes-vous sûr de vouloir supprimer le lieu "{{ place.name }}" ?</p>
    <button type="submit" class="btn btn-danger">Supprimer</button>
    {{ form_end(placeForm) }}

    <hr>

    <a href="{{ path('place_list') }}" class="btn btn-secondary">Retour à la liste</a>
{% endblock %}