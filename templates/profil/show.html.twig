{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block extrastyles %}
    <link rel="stylesheet" href="{{ asset('css/show.css') }}">
{% endblock %}

{% block body %}
    <div class="parent">
        <div class="profil">
            <div class="child">
                <h1 class='h1'>{{ user.pseudo }}</h1>
                <div class="row">
                    <div class="key">Nom:</div>
                    <div class="value"> {{ user.lastname}}</div>
                </div>
                <div class="row">
                    <div class="key">Prenom:</div>
                    <div class="value"> {{ user.firstname}}</div>
                </div>
                <div class="row">
                    <div class="key">Email:</div>
                    <div class="value"> {{ user.email}}</div>
                </div>
                <div class="row">
                    <div class="key">Téléphone:</div>
                    <div class="value"> {{ user.telephone}}</div>
                </div>
                <div class="row">
                    <div class="key">Campus:</div>
                    <div class="value"> {{ user.campus.name}}</div>
                </div>
                <div class="btn">
                    <a href="{{ path('app_main') }}" class="a">Retour</a>
                </div>
            </div>
        </div>
    </div>


{% endblock %}